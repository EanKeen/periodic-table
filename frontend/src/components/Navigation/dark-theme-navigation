  background-color: $oc-gray-9;
}

.dark-def .navText a {
  color: $text;
  text-decoration: none;
}

.dark-def .navText a:hover {
  color: $text;
  //text-decoration: underline;
  //text-decoration-color: $text;
}

.dark-def .navText a:active {
  color: $text;
}

.dark-def .navText a:visited {
  color: $text;
}


// ICONS
.dark-def .featherIcon * {
  stroke: $text;
}

.dark-def .customIcon * {
