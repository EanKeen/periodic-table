$text: $oc-gray-1;
$background: $oc-gray-8;

// Recall with navigation, Vue-Router applies an inside a element
#nav.dark-def {
  background-color: $background;
}

#nav.dark-def .navItem:hover {
  background-color: $oc-gray-9;
}

.dark-def {
  a {
    color: $text;
    text-decoration: none;
  }

  a:hover {
    color: $text;
  }

  a:active {
    color: $text;
  }

  a:visited {
    color: $text;
  }
}

// ICONS
.dark-def .featherIcon * {
  stroke: $text;
}

.dark-def .customIcon * {
  stroke: $text;
  fill: $text;
}

